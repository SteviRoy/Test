          <input class="form-check-input" type="radio" name="avatar" id="exampleRadios2" value="/images/avatar_08.png">
          <label class="form-check-label" for="exampleRadios2">
            <img src="/images/avatar_08.png"></img>
          </label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="avatar" id="exampleRadios2" value="/images/avatar_09.png">
          <label class="form-check-label" for="exampleRadios2">
            <img src="/images/avatar_09.png"></img>
          </label>
        </div>
      </div>
      <div class="col-auto d-flex justify-content-center m-4">
        <button type="submit" class="btn mb-3" id="signup-btn">Submit to Love</button>
      </div>
    </div>
</form>
